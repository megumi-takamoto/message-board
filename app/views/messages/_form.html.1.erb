<%= form_for(@message) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
    <div class="form-group">
        <label for="exampleInputName2">募集タイトル：</label>
        <%= f.text_field :title,class:"form-control",id:"exampleInputName2",placeholder:"【急募】　プログラマ―募集" %>
    </div>


    <div class="form-group">
        <label for="exampleInputEmail2">仕事の内容：</label>
        <%= f.text_area :body,class:"form-control",id:"exampleInputEmail2",placeholder:"Rubeを利用したWebサイトのプログラミング業務" %>
    </div>
    
    <div class="form-group">
        <label for="exampleInputEmail2">勤務地：</label>
        <%= f.text_area :station,class:"form-control",id:"exampleInputEmail2",placeholder:"全国各地の受託オフィスあり　★東京・横浜で急募★　ご希望の方はご連絡ください！" %>
    </div>
    
    <div class="form-group">
        <label for="exampleInputName2">投稿者：</label>
        <%= f.text_field :name,class:"form-control",id:"exampleInputName2",placeholder:"高本恵未" %>
    </div>
    
    <div class="form-group">
        <label for="exampleInputName2">年齢：</label>
        <%= f.text_field :age,class:"form-control",id:"exampleInputName2",placeholder:"高本恵未" %>
    </div>    
    
    <div class="form-group">
        <label for="exampleInputName2">メールアドレス：</label>
        <%= f.text_field :mail,class:"form-control",id:"exampleInputName2",placeholder:"ruby@gmail.com" %>
    </div>
    
    <div class="form-group">
        <label for="exampleInputName2">電話番号</label>：</label>
        <%= f.text_field :tel,class:"form-control",id:"exampleInputName2",placeholder:"090-999-9999" %>
    </div>
    
    <div class="form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
    
<% end %>
</div>