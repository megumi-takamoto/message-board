<div class="panel panel-default">
    <div class="panel-heading">
       メッセージ一覧
    </div>

<div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <br>
    <% end %>
    </div>
</div>    

<div class="container">
<%= form_for(@message,html:{class:"form-inline"}) do |f| %>
    <% if @message.errors.present? %>
     <div class="alert alert-danger">
         <%= alert %>
         <ul>
             <%= @message.errors.full_messages.each do |full_messages| %>
                 <li>
                     <%= full_messages %>
                 </li>
            <% end %>     
         </ul>
        </div>
    <% end %>    
     
     <div class="form-group">
        <label for="exampleInputName2">名前：</label>
        <%= f.text_field :name,class:"form-control",id:"exampleInputName2",placeholder:"高本恵未" %>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail2">内容：</label>
        <%= f.text_area :body,class:"form-control",id:"exampleInputEmail2",placeholder:"メッセージをどうぞ" %>
    </div>
    <div class="form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
<% end %>
</div>
</div>   